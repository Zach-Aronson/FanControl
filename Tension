from gpiozero import Servo
from gpiozero.pins.pigpio import PiGPIOFactory
from time import sleep

# Setup for precision PWM on GPIO 24
factory = PiGPIOFactory()
servo = Servo(24, min_pulse_width=0.0006, max_pulse_width=0.0024, pin_factory=factory)

# Move to 60°
# Formula: servo.value = (angle - 90) / 90
angle = 60
servo_position = (angle - 90) / 90
servo.value = servo_position

print(f"Moving to {angle}°, value = {servo_position}")
sleep(5)

# Optional: stop sending signal (some servos hold position without signal)
servo.detach()

